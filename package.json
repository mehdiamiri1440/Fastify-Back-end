{
  "name": "inventory-backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-paths-esm-loader src/app.ts",
    "dev": "node --loader ts-paths-esm-loader src/app.ts",
    "dev:watch": "node --watch --loader ts-paths-esm-loader src/app.ts",
    "format": "prettier --loglevel=error --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:quiet": "eslint . --quiet",
    "check": "tsc --noEmit",
    "ci": "npm run format:check && npm run lint:quiet && npm run check",
    "test": "node --test -r dotenv/config --loader ts-paths-esm-loader ./test/*",
    "test:human": "node --test --test-reporter=spec -r dotenv/config --loader ts-paths-esm-loader ./test/*",
    "//": "this is a workaround for docker build. it will not run husky install in docker build",
    "prepare": "if [ -d .git ]; then husky install; fi"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/error": "^3.2.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.5.0",
    "@fastify/type-provider-typebox": "^2.4.0",
    "@sinclair/typebox": "^0.25.24",
    "@swc/core": "^1.3.39",
    "@tsconfig/node18": "^1.0.1",
    "@types/node": "^18.15.0",
    "fastify": "^4.14.1",
    "pg": "^8.10.0",
    "qs": "^6.11.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "ts-paths-esm-loader": "^1.4.1",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.4",
    "undici": "^5.21.0"
  }
}
